

<table class="profile" summary="Profile Info">

<tr>
	<td class="main">

<h1>
<%= gravatar_for @user, :size => 100 %>
<%= @user.name %>
</td>
</h1>

	<% if @user.microposts.any? %>
	<table class="microposts" summary="Member Posts">

<%= will_paginate @microposts %>

<%= render @microposts %>
	</table>
	
	<% end %>
	<td class="sidebar round">
	<strong style="color:white">Name:</strong><br /> <%= @user.name %><br />
	<strong style="color:white">Email:</strong> <br /><%= @user.email %><br />
	<strong style="color:white">Comments:</strong> <br /><%= @user.microposts.count %>

	</td>
	</tr>


</table>

